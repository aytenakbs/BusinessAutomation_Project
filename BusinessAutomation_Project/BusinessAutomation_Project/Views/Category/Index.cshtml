@using BusinessAutomation_Project.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
<br />
<h2>Kategoriler</h2>
<table class="table table-bordered">
    <tr>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
	        <td>@item.Name</td>
	        <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
	        <td><a href="/Category/GetCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("index", new {page}))
<a href="/Category/AddCategory/" class="btn btn-primary">Kategori Ekle</a>
