@model List<BusinessAutomation_Project.Models.Entity.SalesTransaction>
<br />
<h3>Satış Detay</h3>
<br />
<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SalesId</td>
            <td>@item.Product.Name</td>
            <td>@item.Customer.Name @item.Customer.Surname</td>
            <td>@item.Employee.Name @item.Employee.Surname</td>
            <td>@item.Amount</td>
            <td>@item.Price</td>
            <td>@item.Total</td>
            <td>@item.Date</td>
        </tr>
    }
</table>
<a href="#" class="btn btn-info">Yazdır</a>