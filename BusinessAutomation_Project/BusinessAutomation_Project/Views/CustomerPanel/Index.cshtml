@model BusinessAutomation_Project.Models.Entity.Customer
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<br />
<h3>Mvc Online Ticari Otomasyon Cari Bilgi Paneli</h3>
@using (Html.BeginForm("index2", "CustomerPanel", FormMethod.Post)) 
{
    <table class="table table-hover">
        <tr>
            <td>
                <label>Mail Adresi:@HttpContext.Current.User.Identity.Name</label>
            </td>
        </tr>
        <tr>
            <td><label>İsim:@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</label></td>
        </tr>
        <tr>
            <td><label>Soyisim:@Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })</label></td>
        </tr>
        <tr>
            <td><label>Şehir:@Html.TextBoxFor(x => x.City, new { @class = "form-control" })</label></td>
        </tr>
        <tr>
            <td><label>Şifre:@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })</label></td>
        </tr>
    </table>
    <button class="btn btn-warning">Bilgilerimi Güncelle</button>
}




