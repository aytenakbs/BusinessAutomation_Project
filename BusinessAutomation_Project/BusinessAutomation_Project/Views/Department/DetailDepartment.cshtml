@using BusinessAutomation_Project.Models.Entity
@model List<Employee>
<br/>
<h2>Departman Detay Sayfası</h2>
<ol class="breadcrumb mb-4">
	<li class="breadcrumb-item active">* @ViewBag.DepartmentName</li>
</ol>
<table class="table table-hover">
	<tr>
		<th>Personel ID</th>
		<th>Ad</th>
		<th>Soyad</th>
		<th>Görsel</th>
		<th>Satışlar</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.EmployeeId</td>
			<td>@item.Name</td>
			<td>@item.Surname</td>
			<td>@item.Image</td>
			<td><a href="/Department/EmpSalesDepartment/@item.EmployeeId" class="btn btn-info">Satışlar</a></td>
		</tr>
	}
</table>
