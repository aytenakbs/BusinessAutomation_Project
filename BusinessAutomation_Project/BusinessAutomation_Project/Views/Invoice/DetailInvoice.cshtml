@using BusinessAutomation_Project.Models.Entity
@model List<InvoiceItem>
<br />
<h2>Fatura Detay Sayfası</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>
<table class="table table-hover">
	<tr>
		<th>ID</th>
		<th>Açıklama</th>
		<th>Miktar</th>
		<th>Birim Fiyat</th>
		<th>Tutar</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.InvoiceItemId</td>
			<td>@item.Description</td>
			<td>@item.Amount</td>
			<td>@item.UnitPrice</td>
			<td>@item.Total</td>
		</tr>
	}
</table>
<a href="/Invoice/NewItem/"class="btn btn-primary">Yeni Kalem Girişi</a>