@model IEnumerable<BusinessAutomation_Project.Models.Entity.GroupClass1>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int number = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{ number++;}@number</td>
                        <td>@item.Department</td>
                        <td>
                            @if(item.Total == 1)
                            {
                            <div class="progress progress-xs progress-striped active">
                                <div class="progress-bar bg-danger" style="width:25%"></div>
                            </div>
                            }
                            @if (item.Total == 2)
                            {
                            <div class="progress progress-xs progress-striped active">
                                <div class="progress-bar bg-warning" style="width: 50%"></div>
                            </div>
                            }
                            @if (item.Total == 3)
                            {
                            <div class="progress progress-xs progress-striped active">
                                <div class="progress-bar bg-primary" style="width: 75%"></div>
                            </div>
                            }
                            @if (item.Total >= 4)
                            {
                            <div class="progress progress-xs progress-striped active">
                                <div class="progress-bar bg-success" style="width: 95%"></div>
                            </div>
                            }

                        </td>
                        <td>
                            @if (item.Total == 1)
                            {
                            <span class="badge bg-danger">@item.Total</span>
                            }
                            @if (item.Total == 2)
                            {
                            <span class="badge bg-warning">@item.Total</span>
                            }
                            @if (item.Total == 3)
                            {
                            <span class="badge bg-primary">@item.Total</span>
                            }
                            @if (item.Total >= 4)
                            {
                            <span class="badge bg-success">@item.Total</span>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
