@model List<BusinessAutomation_Project.Models.Entity.Customer>
<br />
<table class="table table-bordered">
	<tr>
		<th>Cari ID</th>
		<th>Ad</th>
		<th>Soyad</th>
		<th>Şehir</th>
		<th>Mail</th>
		<th>Sil</th>
		<th>Güncelle</th>
		<th>Detaylar</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.CustomerId</td>
			<td>@item.Name</td>
			<td>@item.Surname</td>
			<td>@item.City</td>
			<td>@item.Mail</td>
			<td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a></td>
			<td><a href="/Customer/GetCustomer/@item.CustomerId" class="btn btn-success">Güncelle</a></td>
			<td><a href="/Customer/DetailCustomer/@item.CustomerId" class="btn btn-warning">Detaylar</a></td>
		</tr>
	}
</table>
<a href="/Customer/AddCustomer/" class="btn btn-primary">Yeni Cari Ekle</a>