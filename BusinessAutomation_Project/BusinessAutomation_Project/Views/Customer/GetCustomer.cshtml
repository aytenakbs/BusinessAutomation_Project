
@using FormMethod = System.Web.Mvc.FormMethod
@model BusinessAutomation_Project.Models.Entity.Customer
<br/>  
<h2>Cari Hesap Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateCustomer","Customer",FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CustomerId)
        <label>Ad</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        <label>Soyad</label>
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        <br />
        <label>Şehir</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        <br />
        <label>Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </div>
}
